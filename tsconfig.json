{
  "compilerOptions": {
    "target": "ES6",             // Gera código compatível com ES6
    "module": "ES6",             // Usa módulos ES6
    "moduleResolution": "node",  // Faz o Node.js resolver corretamente os módulos
    "esModuleInterop": true,     // Para importar pacotes de módulos CommonJS
    "skipLibCheck": true,        // Ignora verificações de tipo em bibliotecas
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",          // Pasta de saída para os arquivos compilados
    "rootDir": "./src",          // Diretório raiz para os arquivos TypeScript
    "strict": true               // Ativa a verificação estrita de tipo
  },
  "include": ["src/**/*.ts"],     // Inclui todos os arquivos .ts no diretório src
  "exclude": ["node_modules"]     // Exclui a pasta node_modules
}
